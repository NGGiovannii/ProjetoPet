<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ProjetoPetV2.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:ProjetoPetV2.View">
    <Shell.FlyoutHeader>
        <Grid>
            <Image Source="portalpet.jpg"/>
        </Grid>
    </Shell.FlyoutHeader>
    <ShellContent
            Title="Login"
            Icon="user.png"
            ContentTemplate="{DataTemplate views:Login}"
            Route="Login"/>

    <ShellContent
            Title="Add your Pet"
            ContentTemplate="{DataTemplate views:CadastroPet}"
            Route="RegisterPet" />

    <ShellContent
            Title="Tela Principal"
            ContentTemplate="{DataTemplate views:Principal}"
            Route="MainPage" />


</Shell>
